{
  "name": "aneka-ui",
  "version": "0.1.0",
  "private": true,
  "description": "Framework-agnostic component library providing authentic Material Design, Apple HIG, and Samsung One UI patterns that adapt to your brand colors",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/aneka-ui.git"
  },
  "keywords": [
    "design-system",
    "component-library",
    "material-design",
    "apple-hig",
    "samsung-oneui",
    "react",
    "vue",
    "angular",
    "tailwind",
    "typescript"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.8.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,vue,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,vue,js,jsx,json,md}\"",
    "test": "turbo run test",
    "test:visual": "playwright test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish",
    "build:registry": "tsx scripts/build-registry.ts",
    "validate:registry": "tsx scripts/validate-registry.ts",
    "generate:component": "tsx scripts/generate-component.ts",
    "sync:storybook": "node scripts/sync-storybook-components.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@playwright/test": "^1.42.1",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "lint-staged": "^16.2.4",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsx": "^4.7.1",
    "turbo": "^1.12.5",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1",
    "zod": "^3.22.4"
  },
  "lint-staged": {
    "*.{ts,tsx,vue,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
