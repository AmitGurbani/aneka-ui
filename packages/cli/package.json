{
  "name": "@aneka-ui/cli",
  "version": "0.1.0",
  "description": "CLI for installing and managing Aneka UI components",
  "type": "module",
  "bin": {
    "aneka-ui": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "lint": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "diff": "^5.2.0",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.2",
    "inquirer": "^9.2.15",
    "node-fetch": "^3.3.2",
    "ora": "^8.0.1",
    "semver": "^7.6.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/diff": "^5.2.3",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^24.7.1",
    "@types/semver": "^7.5.8",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
