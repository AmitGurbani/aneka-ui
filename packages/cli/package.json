{
  "name": "@aneka-ui/cli",
  "version": "0.1.0",
  "description": "CLI for installing and managing Aneka UI components",
  "type": "module",
  "bin": {
    "aneka-ui": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "templates"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "execa": "^8.0.1",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1",
    "zod": "^3.22.4",
    "node-fetch": "^3.3.2",
    "diff": "^5.2.0",
    "semver": "^7.6.0",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@types/diff": "^5.0.9",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.24",
    "@types/semver": "^7.5.8",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
