{
  "name": "@aneka-ui/components-test-vue",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Vue component tests for Aneka UI",
  "scripts": {
    "sync": "node ../../scripts/sync-components.js --target=tests-vue",
    "format": "prettier --write \"tests/**/*.{ts,json}\"",
    "lint": "eslint tests --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "pretest": "pnpm sync"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.545.0",
    "radix-vue": "^1.9.17",
    "tailwind-merge": "^3.3.1",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@aneka-ui/test-specs": "workspace:*",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^20.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  }
}
